@model TASEF.Models.ExcelModelView
@{
    /**/

    ViewBag.Title = "Périodes";
}

<h2>Modification des périodes</h2>


@using (Html.BeginForm("EditPeriodes", "Excel", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.firstfile)
    @Html.HiddenFor(model => model.secondfile)
    @Html.HiddenFor(model => model.matricule)
    @Html.HiddenFor(model => model.exercice)
    @Html.HiddenFor(model => model.ownerId)

    <div class="text-danger">@ViewBag.bothPeriodError </div>


    <div class="form-group">
        @Html.LabelFor(model => model.firstPeriodStart, htmlAttributes: new { @class = "control-label col-md-2",id="L" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.firstPeriodStart, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.firstPeriodStart, "", new { @class = "text-danger" })
            <div class="text-danger">@ViewBag.firstPeriodError </div>

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.firstPeriodEnd, htmlAttributes: new { @class = "control-label col-md-2", id = "L" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.firstPeriodEnd, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.firstPeriodEnd, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.secondPeriodStart, htmlAttributes: new { @class = "control-label col-md-2", id = "L" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.secondPeriodStart, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.secondPeriodStart, "", new { @class = "text-danger" })
            <div class="text-danger">@ViewBag.secondPeriodError </div>

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.secondPeriodEnd, htmlAttributes: new { @class = "control-label col-md-2", id = "L" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.secondPeriodEnd, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.secondPeriodEnd, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Enregistrer" class="btn btn-default" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

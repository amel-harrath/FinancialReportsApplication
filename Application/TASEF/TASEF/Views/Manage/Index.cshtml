@model TASEF.Models.IndexViewModel
@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.EntityFramework;
@using TASEF.Models;
@{
    ViewBag.Title = "Gérer";
    var manager = new UserManager<ApplicationUser>(new UserStore<ApplicationUser>(new ApplicationDbContext()));
    var currentUser = manager.FindById(User.Identity.GetUserId());
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Changer les paramètres du votre compte</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Nom:
        </dt>
        <dd> [ @currentUser.userProfileInfo.FirstName ]</dd>
        <dt>
            Email:
        </dt>
        <dd> [ @currentUser.Email ]</dd>
        <dt>Mot de pass:</dt>
        <dd>

            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Changer votre mot de pass", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Créer", "SetPassword")
            }
            ]
        </dd>

        @*
